<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/imageView5Logo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <Button
            android:id="@+id/backECIntialButton"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:onClick="backFromAppointmentinitial"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/apmntmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView5Logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:text="You have no appointments.
Please add one using add button below"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            android:textStyle="normal|bold" />

        <ImageButton
            android:id="@+id/addDocButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/apmntmessage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/btn_addEC"
            android:onClick="addInitialAppoitnment"
            android:src="@drawable/ic_action_add" />
    </RelativeLayout>


</LinearLayout>