<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/home"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignEnd="@+id/textView15"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Welcome "
        android:textSize="25dp"
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary" />



    <TextView
        android:text=" Kindly complete the following form."
        android:textSize="20dp"
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/lname_patient"
        android:layout_alignStart="@+id/textView16"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/lname_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:text="Mr.lastname"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <ImageView
        android:layout_height="75dp"
        android:src="@drawable/patient"
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_above="@+id/textView15"
        android:layout_toStartOf="@+id/button6" />

    <TextView
        android:text="Age"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginTop="24dp"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_width="155dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="textEnd" />

    <TextView
        android:text="Weight"
        android:textSize="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="23dp"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_width="155dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Home Address"
        android:textSize="20dp"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView10"
        android:textAlignment="textEnd"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Username"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:id="@+id/textView18"
        android:layout_width="155dp"
        android:textAlignment="textEnd"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:text="Password"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:id="@+id/textView19"
        android:layout_width="155dp"
        android:textAlignment="textEnd"
        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_marginTop="21dp"
        android:textColor="@color/colorPrimary" />


    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        android:layout_marginTop="46dp"
        android:background="@color/colorPrimary"
        android:onClick="finishPatientRegistration"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/password_patient"
        android:layout_alignTop="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_marginStart="21dp"
        android:background="@color/colorPrimary"
        android:onClick="LoginPatientRegistration"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/password_patient"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/uname_patient"
        android:layout_alignTop="@+id/textView19"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/age"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignEnd="@+id/textView15"
        android:background="@color/white"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignStart="@+id/age"
        android:layout_alignBottom="@+id/textView17"
        android:background="@color/white"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/uname_patient"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/home"
        android:layout_alignTop="@+id/textView18"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>